@model IEnumerable<NguyenVanKhai_lab456.Models.Course>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <ul>
        @foreach (var course in Model)
        {
            <li>
                @course.Datetime - @course.Lecturer.Name
            </li>
        }
    </ul>
</div>
<ul class="course">
    @foreach (var cousre in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @cousre.Datetime.ToString("MM")
                </div>
                <div class="day">
                    @cousre.Datetime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecturer">
                    @cousre.Lecturer.Name
                </span>
                <span class="category">
                    @cousre.Category.Name
                </span>
            </div>
        </li>
    }
</ul>