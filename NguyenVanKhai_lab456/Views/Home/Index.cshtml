@model IEnumerable<NguyenVanKhai_lab456.Models.Course>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <ul>
        @foreach (var course in Model)
        {
            <li>
                @course.Datetime - @course.Lecturer.Name
            </li>
        }
    </ul>
</div>
<ul class="course">
    @foreach (var cousre in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @cousre.Datetime.ToString("MM")
                </div>
                <div class="day">
                    @cousre.Datetime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecturer">
                    @cousre.Lecturer.Name
                </span>
                <span class="category">
                    @cousre.Category.Name
                </span>
                <button data-course-id="@cousre.Id" class="btn btn-default btn-sm js-toggle-attendance">Going?</button>
            </div>
        </li>
    }
</ul>
@section scripts
{
<script>
    $(document).ready(function () {
        $(".js-toggle-attendance").click(function (e) {
            var button = $(e.target);
            $.post("/api/attendances", { courseId: button.attr("data-course.id") })
                .done(function () {
                    button
                        .removeClass("btn-default")
                        .addClass("btn-info")
                        .text("Going");
                })
            .fail(function () {
                alert("Something failed!");
            });
        });
    });
</script>
}
